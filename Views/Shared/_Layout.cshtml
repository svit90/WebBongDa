@using Library;
@{
    string _token = CookieHelper.GetCookie("Token");
    string _name = CookieHelper.GetCookie("UserName");
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Dự đoán vui mùa dịch</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("csslib_head", false)
</head>
<body class="gray-bg p-0">
    <div class="navbar navbar-inverse ">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li id="username" name="username">Xin chào, @_name</li>
                    <li>@Html.ActionLink("Thoát", "Logout", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class=" body-content">
        @RenderBody()
    </div>
    @RenderSection("jslib_footer", false)

</body>
</html>
